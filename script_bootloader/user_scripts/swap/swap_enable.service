#!/bin/sh
#
logger -st "($(basename $0))" $$ "*--------- SWAP_ENABLE SERVICE ---------*"
#
########## CHECK AND ENABLE SWAPFILE ##########
#
# Check if /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile exists
# 检查/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile是否存在
if [ -e "/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile" ]
then
    logger -st "($(basename $0))" $$ "***** SWAPFILE EXISTS *****"
    # Load swapfile
    # 如果/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile存在，则启用
    swapon /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    logger -st "($(basename $0))" $$ "***** SWAPFILE HAS BEEN LOADED *****"
    #
else
    # Create /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    # 如果/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile不存在，则创建/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    logger -st "($(basename $0))" $$ "***** UNABLE TO LOCATE SWAPFILE *****"
    logger -st "($(basename $0))" $$ "***** CREATE SWAPFILE *****"
    dd if=/dev/zero of=/tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile bs=1024 count=524292
    mkswap -L ASUS_SWAP /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    chmod 600 /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    logger -st "($(basename $0))" $$ "***** SWAPFILE HAS BEEN CREATED *****"
    #
    # 启用SWAP
    swapon /tmp/mnt/ASUS_ROUTER/script_bootloader/var/swapfile
    logger -st "($(basename $0))" $$ "***** SWAPFILE HAS BEEN LOADED *****"
fi
#
########## END ##########